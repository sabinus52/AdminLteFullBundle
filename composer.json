{
    "name": "olix/backoffice-bundle",
    "description": "Admin theme bundle for Symfony 5+ based on AdminLTE 3.2 with FOSUserBundle, Forms",
    "type": "symfony-bundle",  
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Olivier",
            "email": "sabinus52@gmail.com"
        }
    ],
    "keywords" : [
        "olix",
        "symfony",
        "admin",
        "back office",
        "back-end",
        "bootstrap",
        "theme",
        "template"
    ],
    "require": {
        "php": ">=8.1",
        "symfony/framework-bundle": "^6.4",
        "symfony/asset": "6.4.*",
        "symfony/dependency-injection": "6.4.*",
        "symfony/event-dispatcher": "6.4.*",
        "symfony/expression-language": "6.4.*",
        "symfony/security-bundle": "6.4.*",
        "symfony/form": "6.4.*",
        "symfony/config": "6.4.*",
        "symfony/options-resolver": "6.4.*",
        "symfony/property-access": "6.4.*",
        "symfony/routing": "6.4.*",
        "symfony/translation": "6.4.*",
        "symfony/twig-bundle": "6.4.*",
        "symfony/validator": "6.4.*",
        "doctrine/orm": "^2.17",
        "doctrine/doctrine-bundle": "^2.11",
        "friendsofsymfony/jsrouting-bundle": "^2.0|^3.0",
        "twig/twig": "^2.12|^3.0",
        "almasaeed2010/adminlte": "^3.2",
        "omines/datatables-bundle": "^0"
    },
    "autoload": {
        "psr-4": {
            "Olix\\BackOfficeBundle\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit --debug",
        "phpmd": [
            "phpmd src ansi ruleset.xml",
            "phpmd tests ansi ruleset.xml"
        ],
        "phpstan": "phpstan analyse src --level=7 --configuration=phpstan.neon",
        "codestyle": "php-cs-fixer fix --dry-run --verbose --diff",
        "codestyle-fix": "php-cs-fixer fix",
        "csniff": "phpcs src tests --colors --standard=PSR12 ",
        "csniff-fix": "phpcbf src --colors --standard=PSR12"
    }
}
