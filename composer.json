{
    "name": "olix/adminltefull-bundle",
    "description": "Admin theme bundle for Symfony 5+ based on AdminLTE 3.2 with FOSUserBundle, Forms",
    "type": "symfony-bundle",  
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Olivier",
            "email": "sabinus52@gmail.com"
        }
    ],
    "keywords" : [
        "olix",
        "symfony",
        "admin",
        "back office",
        "back-end",
        "bootstrap",
        "theme",
        "template"
    ],
    "require": {
        "php": ">=7.2.5",
        "symfony/framework-bundle": "^5.4",
        "symfony/asset": "5.4.*",
        "symfony/dependency-injection": "5.4.*",
        "symfony/event-dispatcher": "5.4.*",
        "symfony/security-bundle": "5.4.*",
        "symfony/form": "5.4.*",
        "doctrine/orm": "^2.12",
        "doctrine/doctrine-bundle": "^2.6",
        "twig/twig": "^2.12|^3.0"
    },
    "autoload": {
        "psr-4": {
            "Olix\\BackOfficeBundle\\": "src/"
        }
    },
    "require-dev": {
    },
    "scripts": {
        "test": "phpunit --debug",
        "phpmd": [
            "phpmd src ansi cleancode,codesize,controversial,design,unusedcode,naming",
            "phpmd tests ansi cleancode,codesize,controversial,design,unusedcode,naming"
        ],
        "phpstan": "phpstan analyse src --level=7 --configuration=phpstan.neon",
        "codestyle": "php-cs-fixer fix --dry-run --verbose --diff",
        "codestyle-fix": "php-cs-fixer fix",
        "csniff": "phpcs src tests --colors --standard=PSR12 ",
        "csniff-fix": "phpcbf src --colors --standard=PSR12"
    }
}
