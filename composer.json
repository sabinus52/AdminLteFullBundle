{
    "name": "olix/backoffice-bundle",
    "description": "Admin theme bundle for Symfony 5+ based on AdminLTE 3.2 with Forms",
    "type": "symfony-bundle",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Olivier",
            "email": "sabinus52@gmail.com"
        }
    ],
    "keywords": [
        "olix",
        "symfony",
        "admin",
        "back office",
        "back-end",
        "bootstrap",
        "theme",
        "template"
    ],
    "require": {
        "php": ">=8.1",
        "symfony/framework-bundle": "^6.4",
        "symfony/asset": "6.4.*",
        "symfony/dependency-injection": "6.4.*",
        "symfony/event-dispatcher": "6.4.*",
        "symfony/security-bundle": "6.4.*",
        "symfony/form": "6.4.*",
        "symfony/config": "6.4.*",
        "symfony/options-resolver": "6.4.*",
        "symfony/property-access": "6.4.*",
        "symfony/routing": "6.4.*",
        "symfony/translation": "6.4.*",
        "symfony/twig-bundle": "6.4.*",
        "symfony/validator": "6.4.*",
        "doctrine/orm": "^2.17",
        "doctrine/doctrine-bundle": "^2.11",
        "twig/twig": "^2.12|^3.0",
        "omines/datatables-bundle": "^0",
        "symfony/ux-chartjs": "^2.14",
        "symfony/ux-autocomplete": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "Olix\\BackOfficeBundle\\": "src/"
        }
    },
    "extra": {
        "symfony": {
            "endpoint": [
                "https://api.github.com/repos/sabinus52/symfony-recipes/contents/index.json",
                "flex://defaults"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --configuration .vscode/phpunit.xml",
        "codestyle": "vendor/bin/php-cs-fixer fix --config=.vscode/.php-cs-fixer.php --dry-run --verbose --diff",
        "codestyle-fix": "vendor/bin/php-cs-fixer fix --config=.vscode/.php-cs-fixer.php",
        "phpmd": [
            "vendor/bin/phpmd src ansi .vscode/ruleset.xml",
            "vendor/bin/phpmd tests ansi .vscode/ruleset.xml"
        ],
        "phpstan": "vendor/bin/phpstan analyse src --configuration=.vscode/phpstan.neon",
        "psalm": "vendor/bin/psalm --config=.vscode/psalm.xml",
        "rector": "vendor/bin/rector process --dry-run --config .vscode/rector.php",
        "rector-fix": "vendor/bin/rector process --config .vscode/rector.php",
        "csniff": "phpcs src tests --colors --standard=PSR12 ",
        "csniff-fix": "phpcbf src --colors --standard=PSR12"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.65",
        "phpmd/phpmd": "^2.15",
        "rector/rector": "^1.2",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^11.4",
        "vimeo/psalm": "^0.3.14"
    }
}
