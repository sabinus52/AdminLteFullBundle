{% set breadcrumb = olixbo_breadcrumb(app.request, forceMenuActiv|default()) %}                                
{% if breadcrumb %}
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            {% for item in breadcrumb %}
                {% if loop.last %}
                    <li class="breadcrumb-item active">{{ item.label }}</li>
                {% else %}
                    <li class="breadcrumb-item"><a href="{{ item.route is empty ? '#' : '/' in item.route ? item.route : path(item.route, item.routeArgs) }}">{{ item.label }}</a></li>
                {% endif %}
            {% endfor %}
        </ol>
    </div>

{% endif %}
