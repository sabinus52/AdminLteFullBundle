{% if app.session and app.session.started and app.session.flashbag.peekAll|length > 0 %}
    <div class="row">
        <div class="col-sm-12">
            {% for type, messages in app.session.flashbag.all %}
                {% for message in messages %}
                    {% if type == 'error' %}{% set type = 'danger' %}{% endif %}
                    <div class="alert{{ type ? ' alert-'~type : '' }} fade show  {% if close|default(true) %}alert-dismissible{% endif %}">
                    {% if close|default(true) %}
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    {% endif %}
                    {{ message|trans({},'flashmessages') }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endif %}
