<!DOCTYPE html>
<html lang="fr">
    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
        {% endblock %}
        <title>{% block title %}{% endblock %}</title>

        {% block stylesheets %}
            {% include '@OlixBackOffice/stylesheets.html.twig' %}
        {% endblock %}

    </head>

    <body class="hold-transition sidebar-mini {{ olixbo_class_body() }}">

        <div class="wrapper">

            <div class="preloader flex-column justify-content-center align-items-center">
                {% block preloader %}<img class="animation__shake" src="{{ asset('bundles/olixbackoffice/images/preloader.gif') }}" alt="Loading..." height="128" width="128">{% endblock %}
            </div>


            {# NAVBAR BEGIN #}
            <nav class="main-header navbar navbar-expand {{ olixbo_class_navbar() }}">
                {# Left navbar links #}
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a></li>
                    {% block navbar_links %}{% endblock %}
                </ul>

                {# Right navbar links #}
                <ul class="navbar-nav ml-auto">

                    {% block navbar_search %}
                        {% include '@OlixBackOffice/Navbar/search.html.twig' %}
                    {% endblock %}

                    {% block navbar_messages %}
                        {% include '@OlixBackOffice/Navbar/messages.html.twig' %}
                    {% endblock %}

                    {% block navbar_notifications %}
                        {% include '@OlixBackOffice/Navbar/notifications.html.twig' %}
                    {% endblock %}

                    {% block fullscreen %}
                        <li class="nav-item"><a class="nav-link" data-widget="fullscreen" href="#" role="button"><i class="fas fa-expand-arrows-alt"></i></a></li>
                    {% endblock %}

                    {% block controlbar_link %}
                        <li class="nav-item">
                            <a class="nav-link" data-widget="control-sidebar" data-controlsidebar-slide="true" href="#" role="button"><i class="fas fa-th-large"></i></a>
                        </li>
                    {% endblock %}
                </ul>
            </nav>
            {# NAVBAR END #}


            {# SIDEBAR BEGIN #}
            <aside class="main-sidebar  {{ olixbo_class_sidebar() }} elevation-4">

                {% block brand %}
                    <a href="#" class="brand-link">
                        <img src="{{ asset('bundles/olixbackoffice/images/logo.png') }}" alt="Symfony Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                        <span class="brand-text font-weight-light">Symfony Demo</span>
                    </a>
                {% endblock %}

                <div class="sidebar">

                    {% block sidebar_user %}
                        {% include '@OlixBackOffice/Sidebar/user.html.twig' %}
                    {% endblock %}

                    {% block sidebar_search %}
                        {% include '@OlixBackOffice/Sidebar/search.html.twig' %}
                    {% endblock %}

                    {% include '@OlixBackOffice/Sidebar/menu.html.twig' %}

                </div>

            </aside>
            {# SIDEBAR END #}


            {# CONTENT BEGIN #}
            <div class="content-wrapper">
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="m-0">{% block content_title %}Back Office{% endblock %} <small>{% block content_subtitle %}DÃ©mo du bundle{% endblock %}</small></h1>
                            </div>
                            {% block content_breadcrumb %}
                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-right">
                                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                                        <li class="breadcrumb-item active">Starter Page</li>
                                    </ol>
                                </div>
                            {% endblock %}
                        </div>
                    </div>
                </div>

                <div class="content">
                    {% block content %}{% endblock %}
                </div>
            </div>
            {# CONTENT END #}

            {% block controlbar %}
                <aside class="control-sidebar control-sidebar-dark">
                    <div class="p-3">
                        <h5>Title</h5><p>Sidebar content</p>
                    </div>
                </aside>
            {% endblock %}


            {% block footer %}
                <footer class="main-footer">
                    <div class="float-right d-none d-sm-inline">Anything you want</div>
                    <strong>Copyright &copy; 2014-{{ "now"|date("Y") }} <a href="#">Your compagny</a>.</strong> All rights reserved.
                </footer>
            {% endblock %}

        </div>

        {% block javascripts %}
            {% include '@OlixBackOffice/javascripts.html.twig' %}
        {% endblock %}

    </body>
</html>
