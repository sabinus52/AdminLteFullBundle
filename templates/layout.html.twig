<!DOCTYPE html>
<html lang="fr">
    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
        {% endblock %}
        <title>{% block title %}{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/olixbackoffice/css/olix-fonts.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/olixbackoffice/css/adminlte.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/olixbackoffice/plugins/fontawesome-free/css/all.min.css') }}">
        {% endblock %}

    </head>

    <body class="hold-transition sidebar-mini layout-fixed">

        <div class="wrapper">

            <div class="preloader flex-column justify-content-center align-items-center">
                {% block preloader %}<img class="animation__shake" src="{{ asset('bundles/olixbackoffice/images/preloader.gif') }}" alt="Loading..." height="128" width="128">{% endblock %}
            </div>

            {% include '@OlixBackOffice/navbar.html.twig' %}

            {% include '@OlixBackOffice/sidebar.html.twig' %}

            <div class="content-wrapper">
                {% block content %}{% endblock %}
            </div>

            <aside class="control-sidebar control-sidebar-dark">
                <div class="p-3">
                    <h5>Title</h5><p>Sidebar content</p>
                </div>
            </aside>

            {% include '@OlixBackOffice/footer.html.twig' %}

        </div>

        {% block javascripts %}
            <script src="{{ asset('bundles/olixbackoffice/plugins/jquery/jquery.min.js') }}"></script>
            <script src="{{ asset('bundles/olixbackoffice/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('bundles/olixbackoffice/js/adminlte.min.js') }}"></script>
        {% endblock %}

    </body>
</html>
